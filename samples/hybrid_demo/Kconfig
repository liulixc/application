config SAMPLE_SUPPORT_CLIENT
    bool
    prompt "Support client."
    default n
    depends on ENABLE_SLE_HYBRID
    help
        This option means support BMS_SLAVE Sample.


config SAMPLE_SUPPORT_HYBRID
    bool
    prompt "Support hybrid."
    default n
    depends on ENABLE_SLE_HYBRID
    help
        This option means support BMS_GATEWAY Sample.

config SAMPLE_SUPPORT_SERVER
    bool
    prompt "Support server."
    default n
    depends on ENABLE_SLE_HYBRID
    help
        This option means support SLE UART  1 vs 8  Sample.