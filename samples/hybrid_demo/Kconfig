config SAMPLE_SUPPORT_CLIENT
    bool
    prompt "Support client."
    default n
    depends on ENABLE_SLE_HYBRID
    help
        This option means support Client Sample.


config SAMPLE_SUPPORT_HYBRID
    bool
    prompt "Support hybrid."
    default n
    depends on ENABLE_SLE_HYBRID
    help
        This option means support hybrid Sample.

config SAMPLE_SUPPORT_SERVER
    bool
    prompt "Support server."
    default n
    depends on ENABLE_SLE_HYBRID
    help
        This option means support SLE Server  Sample.

config SAMPLE_SUPPORT_MESH
    bool
    prompt "Support mesh."
    default n
    depends on ENABLE_SLE_HYBRID
    help
        This option means support mesh Sample.
